        "import tkinter as tk\n",
        "import random\n",
        "\n",
        "def jugar(opcion_usuario):\n",
        "    opciones = [\"Piedra\", \"Papel\", \"Tijera\", \"Lagarto\", \"Spock\"]\n",
        "    cpu = random.choice(opciones)\n",
        "    reglas = {\n",
        "        \"Piedra\": [\"Tijera\", \"Lagarto\"],\n",
        "        \"Papel\": [\"Piedra\", \"Spock\"],\n",
        "        \"Tijera\": [\"Papel\", \"Lagarto\"],\n",
        "        \"Lagarto\": [\"Spock\", \"Piedra\"],\n",
        "        \"Spock\": [\"Tijera\", \"Papel\"]\n",
        "    }\n",
        "\n",
        "    if opcion_usuario == cpu:\n",
        "        resultado.set(f\"¡Empate! Ambos eligieron {opcion_usuario}\")\n",
        "    elif cpu in reglas[opcion_usuario]:\n",
        "        resultado.set(f\"¡Ganaste! {opcion_usuario} vence a {cpu}\")\n",
        "    else:\n",
        "        resultado.set(f\"¡Perdiste! {cpu} vence a {opcion_usuario}\")\n",
